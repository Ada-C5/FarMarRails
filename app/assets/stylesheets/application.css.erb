 html {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
	font-size: 1rem;
	width: 80rem;
	background-color: #F0FBF0;
}


header {
  background-image: url(<%= asset_path "cabbage.png" %>);
	background-size: 25%;
  height: 13.5rem;
}


nav.nav_bar {
  background: url(<%= asset_path "blue-check-pattern-background.jpg" %>);
  background-size: 20%;
}

.nav_bar ul {
  list-style-type: none;
  margin: 0;
  padding: 1rem;
	border-radius: .9rem;
}

li.button_link {
  font-size: 1.5rem;
	color: #3838d2;
	border-radius: .9rem;
	text-decoration: none;
	width: 22rem;
	text-align: left;
  font-family: 'Lobster', cursive;
}

input#id {
	color: #3838d2;
	border: none;
	border-radius: .4rem;
	height: 1.4rem;
	background-color: white;
  display: inline-block;
}

input {
	color: #3838d2;
	border: none;
	border-radius: .4rem;
	height: 1.5rem;
	background-color: white;
  display: inline-block;
}

.nav_bar li {
	display: inline-block;
	padding: 1rem;
  font-family: 'Lobster', cursive;
}

.nav_bar a {
	font-size: 6.5rem;
	color: #3838d2;
	padding: rem;
	border-radius: .9rem;
	text-decoration: none;
  font-family: 'Lobster', cursive;
}

h1 {
  font-family: 'Signika', sans-serif;
}

.display_blocks ul {
	display: block;
	border: solid blue;
  border-radius: .7rem;
  font-family: 'Signika', sans-serif;
  list-style-type: none;
  margin: 1rem;
  padding: 1rem;
  text-align: left;
}

.display_blocks ul li form.button_to {
  display: inline-block;
}
