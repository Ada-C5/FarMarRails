<section class="product_show">
  <div class="product_name">
    <h2>Name: <%= @product.name %> </h2>
  </div>
</section>

<p class="edit-link">
<%= link_to "Edit this product", edit_product_path(@product.id) %>
</p>

<p class="delete-link">
<%= link_to "Delete this product", product_path(@product.id), method: :delete, data: {confirm: 'Are you sure you want to delete this product?'} %>
</p>
