
<h2>Create a New Product</h2>

<%= form_for [@vendor, @product] do |f| %>
	<%= f.label :'Product Name:' %>
	<br>
	<%= f.text_field :name, class: 'field' %>
	<%= f.hidden_field(:vendor_id, :value => @vendor.id) %>
	<br>
<div class="product_button">
	<%= f.submit class: 'btn btn-success'%>
</div>
<% end %>
