<article>
    <section>
      <%= @vendor.name %>
      <%= @vendor.employee_num %>
      <%= @vendor.market_id %>
    </section>
    <section>
      <h3>Vendor Products:</h3>
      <% @vendor.products.each do |product| %>
        <section>
          <%= product.name %>
          <%= product.vendor_id %>
          <%= product.created_at %>
          <%= product.updated_at %>
          <%= form_tag(vendor_product_path(@vendor.id, product.id), method: "delete", data: {confirm: "Are you sure?"}) do %>
            <%= submit_tag "Delete" %>
          <% end %>
        </section>
      <% end %>
    </section>
    <section>
      <h3>Vendor Sales:</h3>
      <% @vendor.sales.each do |sale| %>
        <section>
          <%= sale.amount %>
          <%= sale.vendor_id %>
          <%= sale.created_at %>
          <%= sale.updated_at %>
          <!-- <%#= form_tag(vendor_product_path(@vendor.id, product.id), method: "delete", data: {confirm: "Are you sure?"}) do %>
            <%#= submit_tag "Delete" %>
          <%# end %> -->
        </section>
      <% end %>
      <h3>Total sales : $<%= (@vendor.sales.sum(:amount))/100.to_f %></h3>
    </section>
</article>
