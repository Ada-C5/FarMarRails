<% @products = Product.where(vendor_id: @vendor.id) %>

<%if @products.length == 0 %>
  <%= "Sorry, you have no products!"%>
<%else%>
  <h1>Here are your products!</h1>

  <ul>
    <% @products.each do |product| %>
    <li>
      <%= product.name %>
      <%= link_to "", edit_product_path(product), class:"glyphicon glyphicon-pencil", alt: "Edit Product" %>
      <%= link_to "", {:controller => :products, :action => 'destroy', :id => product.id}, method: :delete, data: {confirm: "Are you sure you want to delete this product?"}, class:"glyphicon glyphicon-trash", alt: "Delete Product"%>
    </li>
    <% end %>
  </ul>

<%end%>

<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
         <li><%= link_to "New Product", new_product_path(vendor_id: @vendor.id) %></li>
      </ul>
    </div>
  </div>
</nav>