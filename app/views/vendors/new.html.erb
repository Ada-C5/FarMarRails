
<fieldset>
  <legend>Create or Edit a Vendor</legend>
  <%= form_for @vendor, :html => { :class => "form-horizontal" } do |f| %>
    <div class="control-group">
      <%=f.label :name %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%=f.label :employee_count %>
      <div class="controls">
        <%= f.text_field :employee_count %>
      </div>
    </div>

    <br>
    <div class="form-actions", class="dropdown", class="btn btn-primary dropdown-toggle">
      <%= f.label "Market"%>
      <%= f.select (:market_id) do %>
      <%= options_from_collection_for_select(Market.all, :id, :name, @current_market) %>
      <% end %>
    </div>
    <br>

    <div class="form-actions">
      <%= f.submit class:'btn btn-success' %>
    </div>
  <% end %>
