<% if @market_edit == true %>
  <span class="m-card"><%= link_to "Create a New Vendor", new_market_vendor_path %></span>
<% end %>

<article>
  <% @vendors.each do |vendor| %>
    <section class="vendor-card">
      <span class="m-card"><%= link_to vendor.name, vendor_path(vendor.id) %></span>
      <span class="m-card"><%= vendor.employee_num %> - Employee(s)</span>
      <span class="m-card"><%= vendor.market_id %></span>
      <% if @market_edit == true %>
        <%= link_to "EDIT", edit_market_vendor_path(params[:market_id], vendor.id)  %>
        <%= form_tag(market_vendor_path(params[:market_id], vendor.id), method: "delete", data: {confirm: "Are you sure?"}) do %>
        <%= submit_tag "Delete" %>
        <% end %>
      <% end %>
    </section>
  <% end %>
</article>
