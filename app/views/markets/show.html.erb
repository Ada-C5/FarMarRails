<h2><%= @market.market_name %></h2>
<ul>
  <li><%= "Address"%></li>
  <li><%="#{ @market.address}," %>
  <%="#{@market.city},"%>
  <%=" #{@market.state}," unless @market.state.nil?%><%=" #{@market.zip}" unless @market.zip.nil?%></li>

  <li><%= "County"%></li>
  <li><%="#{@market.county}" unless @market.county.nil?%></li>
</ul>

<h3>Market Vendors</h3>
<ul>
  <% @vendors.each do |vendor| %>
  <li>
    <%= link_to vendor.vendor_name, vendor_path(vendor.id)%>
  </li>
  <% end %>
</ul>


