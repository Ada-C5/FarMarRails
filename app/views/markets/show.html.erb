<h1><%= @market.name %></h1>
<ul>


  <li>
    <%= @market.address %>, <%= @market.city %>, <%= @market.county %>, <%= @market.state %>, <%= @market.zip %>
  </li>

  <li>
    <%= link_to "EDIT", edit_market_path %>
  </li>

</ul>

<h2>All Vendors at this market!</h2>
<ul>

<% @market.vendors.each do |vendor| %>

  <li>
    <%= link_to vendor.name, vendor_path(vendor.id) %>
  </li>

  <ul>

    <li>
      <%= link_to "DELETE",  vendor_path(vendor.id), method: :delete, data: {confirm: "Are you sure you want to delete this vendor?"} %>
    </li>

    <li>
      <%= link_to "EDIT", edit_vendor_path(vendor.id) %>
    </li>

  </ul>


<% end %>

</ul>

<p>
  <%= link_to "ADD NEW VENDOR", new_vendor_path(market_id: @market.id) %>
</p>
