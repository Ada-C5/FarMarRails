<h1> Welcome, <%=@market.name%>! </h1>

<p>
  Address: <%= @market.address %><br>
  City: <%= @market.city %><br>
  County: <%= @market.county %><br>
  State: <%= @market.state %><br>
  Zip: <%= @market.zip %><br>
</p>

<%= button_to "Add a new vendor", new_vendor_path(@market.id), method: :get %>

<h2>Vendors: </h2><br>
  <% @market.vendors.each do |vendor| %>
    <ul>
      <li> <%= vendor.name %> </li>
      <%= button_to "Delete vendor", vendor_path(vendor.id), method: :delete, data: {confirm: "Are you sure?"} %>
    </ul>
  <% end %>
