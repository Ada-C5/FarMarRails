<h1><%= "#{@market.name.gsub(/[A-Za-z']+/,&:capitalize)}" %></h1>

<h2>Name:</h2><br>
   <%= @market.name.gsub(/[A-Za-z']+/,&:capitalize) %>
<h2>Street/Site Location:</h2><br>
  <%= @market.address %>
<h2>City:</h2><br>
  <%= @market.city %>
<h2>County:</h2><br>
   <%= @market.county %>
<h2>State:</h2><br>
   <%= @market.state %>
<h2>Zip Code:</h2><br>
  <%= @market.zip_code %>

<h2>Vendors at <%= "#{@market.name.gsub(/[A-Za-z']+/,&:capitalize)}" %></h2>
<ul>
  <% @vendors.each do |vendor| %>
    <% if vendor.market_id == @market.id %>
    <p><%= link_to vendor.name, vendor_path(vendor.id) %> |
      <%= link_to 'Edit', edit_vendor_path(vendor.id) %> |
      <%= link_to 'Delete', vendor_path(vendor.id), method: :delete, data:
      { confirm: "Are you sure you want to delete this vendor?"} %></p>

    <% end %>
  <% end %>
</ul>

<p><%= link_to '» Edit Market', edit_market_path(@market.id) %></p>

<p><%= link_to '» All Markets', markets_path %></p>
