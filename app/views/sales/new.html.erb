<h1> Welcome, <%=@vendor.name%>! Create a new sale: </h1>

<%= form_for @sale do |f| %>
  <%= f.label :amount %>
  <%= f.text_field :amount %>
  <%= f.label :purchase_time %>
  <%= f.text_field :purchase_time %>
  <%= f.hidden_field :vendor_id, :value => @vendor.id %>
  <%= f.select "product_id", options_from_collection_for_select( @products, "id", "name"), :include_blank => true %><br>
  <%= f.submit %>
<% end %>
