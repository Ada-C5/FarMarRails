<h2>Add a New Sale for a Product</h2>


<%= form_for [@vendor, @sale], :html => { :class => "form-horizontal" } do |f| %>

	<%= f.label :'Enter sale amount:' %>
	<%= f.text_field :amount, class: 'field' %>
	<br>
	<%= f.hidden_field :purchase_time, :value => Time.now%>
	<%= f.hidden_field :vendor_id, :value => @vendor.id%>

<div class="form-actions", class="dropdown", class="btn btn-primary dropdown-toggle">
      <%= f.label "Choose a Product"%>
      <%= f.select (:product_id) do %>
      <%= options_from_collection_for_select(@vendor.products, :id, :name) %>
      <% end %>
    </div>
	<div class="new_sales">
		<%= f.submit  class: 'btn btn-success' %>
	</div>
<% end %>
